{
  "name": "vue3-vite4-pinia-template",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --max-warnings 0 --cache",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --max-warnings 0 --cache --fix",
    "style-lint": "stylelint src/**/*.{css,sass,scss,less,vue}",
    "style-lint:fix": "stylelint src/**/*.{css,sass,scss,less,vue} --fix",
    "commit": "git-cz",
    "postinstall": "husky install",
    "prepare": "husky install",
    "jscpd": "jscpd ./ -o './report/'"
  },
  "dependencies": {
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "axios": "^1.3.6",
    "element-plus": "^2.3.3",
    "mitt": "^3.0.0",
    "pinia": "^2.0.35",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@vitejs/plugin-vue": "^4.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.14.1",
    "husky": "^8.0.3",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.62.0",
    "stylelint": "^14.16.0",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "unplugin-auto-import": "^0.15.3",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.3.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-eslint": "^1.8.1",
    "vue-eslint-parser": "^9.3.0"
  },
  "lint-staged": {
    "*.{css,sass,scss,less,vue}": [
      "npm run style-lint"
    ]
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console",
      "badge"
    ],
    "ignore": [
      "node_modules",
      "miniprogram_npm",
      "pages/test",
      "config/mock.js "
    ],
    "absolute": true,
    "gitignore": true
  }
}
